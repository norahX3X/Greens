<%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br>

    <%= f.label :image %>
    <%= f.url_field :image %><br>

    <%= f.label :price %>
    <%= f.text_field :price %><br>

    <%= f.label :quantity %>
    <%= f.text_field :quantity %><br>

    <%= f.label :stack %>
    <%= f.text_field :stack %><br>

    <%= f.label :farm %>
    <%= f.text_field :farm %><br>

<%= f.label :description %>
    <%= f.text_field :description %><br>

    <%= f.label :category %>
    
    <%= f.collection_select :category_id, Category.all, :id, :name %><br>

    <%= f.submit "Submit" %>

<% end %>
