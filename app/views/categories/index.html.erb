
<div class="category">
<h1> Categories </h1>
</div>


<div class="container">
 <div class="row " >
<% @categories.each do |category| %>

<div class="card col-md-3 col-sm-1 ">
    <div class="card-body">
    <h4 class="card-title"><%= link_to category.name, category_path(category) %></h4>
  </div>
  
</div>

<%end%>
</div>

<% if current_user && current_user.admin? %>

<%= link_to 'Add New Category', new_category_path, class: 'btn btn-success float-right' %>

<% end %>

</div>


