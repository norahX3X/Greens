    <div class="row">
        <div class="card col-md-3 text-center">
            <div class="card-body">
                <h5>Orders: <%= @orders.length %></h5> <span><%= link_to  "( Manage )", orders_path, class: 'card-link' %></span>
                 <br>
                
            </div>
        </div>
        <div class="card col-md-3 text-center">
            <div class="card-body">
                <h5>Categories</h5> <%= @categories.length %>
            </div>
        </div>
        <div class="card col-md-3 text-center">
            <div class="card-body">
                <h5>Products</h5> <%= @products.length %>
            </div>
        </div>
        <div class="card col-md-3 text-center">
            <div class="card-body">
                <h5>Users</h5> <%= @users.length %>
            </div>
        </div>
    </div>


    <h2>All Admins</h2>
    <ul>
    <% @users.each do |user| %>
    <% if user.admin %>
        <li>
        <%= user.first_name %>
        </li>
    <% end %>
    <% end %>
</ul>

</div>